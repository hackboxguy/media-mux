<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.mediamux.sync"
       name="Media-Mux Sync"
       version="1.2.0"
       provider-name="hackboxguy">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <!-- Background service -->
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <!-- Runnable script for direct invocation -->
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <!-- Context menu item for video player -->
    <extension point="kodi.context.item">
        <menu id="kodi.core.video">
            <item library="context.py">
                <label>Sync All Screens</label>
                <visible>System.HasAddon(service.mediamux.sync) + Player.HasVideo</visible>
            </item>
        </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Sync all screens to play the same content</summary>
        <description lang="en">Sync all Kodi screens to play the same content. On master device (USB storage attached), adds "Sync Screens" button to video player OSD. Access by tapping screen during playback or pressing 'S' key.</description>
        <platform>all</platform>
        <license>MIT</license>
    </extension>
</addon>
